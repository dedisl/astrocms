---
// src/pages/admin.astro
---

<html lang="id">
<head>
    <meta charset="UTF-8">
    <title>CMS Admin - Summernote</title>
    
    <script is:inline src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link is:inline rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script is:inline src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link is:inline href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script is:inline src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
</head>
<body style="padding: 20px; background: #f4f4f4;">

    <div class="container" style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
        <h2>Buat Postingan Baru</h2>
        <hr />
        
        <div class="form-group">
            <label>Judul Artikel</label>
            <input type="text" id="title" class="form-control" placeholder="Masukkan judul...">
        </div>

        <div class="form-group">
            <label>Konten</label>
            <div id="summernote"></div>
        </div>

        <button id="btnPublish" class="btn btn-primary btn-lg">Publish ke Google Sheets</button>
    </div>

    <script is:inline>
        $(document).ready(function() {
            // Inisialisasi Summernote
            $('#summernote').summernote({
                placeholder: 'Tulis isi artikel Anda di sini...',
                tabsize: 2,
                height: 300,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });

            // Logika Klik Tombol Publish
            $('#btnPublish').click(function() {
                const title = $('#title').val();
                const content = $('#summernote').summernote('code');

                if(!title || content === '<p><br></p>') {
                    alert('Judul dan Konten tidak boleh kosong!');
                    return;
                }

                console.log("Data yang akan dikirim:", { title, content });
                alert("Data siap dikirim! Langkah selanjutnya kita hubungkan ke Cloudflare Worker.");
            });
        });
    </script>
</body>
</html>
